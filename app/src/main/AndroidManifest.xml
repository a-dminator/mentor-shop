<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.adev.mentor_shop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/my_new_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/my_new_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.AboutActivity" />
        <activity android:name=".view.ProductsActivity" />
        <activity android:name=".view.ProductDetailsActivity" />
        <activity android:name=".view.CategoriesActivity"></activity>
    </application>

</manifest>